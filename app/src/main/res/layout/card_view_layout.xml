<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgWord" />
    <TextView
        android:id="@+id/txtWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:text="Word data"
        android:layout_below="@id/imgWord"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="26dp"/>
    <TextView
        android:id="@+id/txtTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:layout_below="@id/txtWord"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/txtExampleEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExampleEN"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:layout_below="@id/txtTranslation"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/txtExampleESP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExampleESP"
        android:gravity="center_vertical"
        android:textSize="10dp"
        android:layout_below="@id/txtExampleEn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />
</RelativeLayout>
</android.support.v7.widget.CardView>
