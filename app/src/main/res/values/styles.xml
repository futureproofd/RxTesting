<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--default, Material Light color scheme-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:displayOptions">disableHome</item>

    <!--For animation
        <item name="windowContentTransitions">true</item>
        <item name="windowAllowEnterTransitionOverlap">true</item>
        <item name="windowAllowReturnTransitionOverlap">true</item>
        <item name="windowSharedElementEnterTransition">@transition/changebounds</item>
        <item name="windowSharedElementExitTransition">@transition/changebounds</item>
     -->
    </style>


    <style name="CardDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/card_dialog_anim_in</item>
        <item name="android:windowExitAnimation">@anim/card_dialog_anim_out</item>
    </style>
</resources>
